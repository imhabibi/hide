<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Number_Activity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/shield"/>
    <TextView
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For security we can needed to a code for opening this app"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="Write Security code"
        android:id="@+id/securityCode"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/selectCode"
        android:textColor="#fff"
        android:onClick="onClickSetSecurityCode"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_customer"
        android:text="Set code and lets go"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/reCode"
            android:textColor="#000"
            android:onClick="onClickSetSecurityCode"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="#FFEB3B"
            android:text="Re-code"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/confirmCode"
            android:textColor="#fff"
            android:onClick="onClickSetSecurityCode"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_customer"
            android:text="Confirm code"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</LinearLayout>